<%- layout('partials/BoilerPlate') %>

<h1>All These Are Listed</h1>
<% for(let l of libraries){ %>
<div class="card mb-3" style="max-width: 540px">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%=l.image %>" class="img-fluid" alt="..." />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=l.name %></h5>
        <p class="card-text"><%=l.location %></p>
        <p class="card-text">
          <small class="text-body-secondary">
            <a class="btn btn-light" href="/library/<%=l.id  %>"
              >View More Details</a
            >
          </small>
        </p>
      </div>
    </div>
  </div>
</div>
<% } %>
<footer>
  <a class="btn btn-primary" href="/library/new">Add New Library</a>
</footer>
